<!DOCTYPE html>
<html>
  <head>
    <title>SkyBNB</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/4601c228d0.js" crossorigin="anonymous"></script>
    <%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=#{ENV['MAPS_API_KEY']}" %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <% if current_user %>
      <script>
        window.currentUser = {
          "email": "<%= current_user.email%>",
          "firstName": "<%= current_user.first_name%>",
          "id": <%= current_user.id%>
        };
      </script>
    <% end %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
